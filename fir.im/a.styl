*
    margin: 0
    padding: 0

body     
    background yellow

.plane-wrapper
    position absolute
    top 50%
    animation underlate 6s linear infinite alternate

@keyframes upderlate 
    0%,50%,100%
        transform: rotate3d(0,0,0)
    25%
        transform: translate(-6px,-18px,0)  
    75%
        transform: translate3d(6px,10px,0)  

.section-1.aninmaion-out .plane-wrapper
    animation: plane-out 1.3s  forwards ease-out
    
@keyframes plane-out {
           
            0%
                transform: scale(1) translateX(0)
         
            30%
                transform: scale(.8) translateX(160px)
            
            100%
                  transform: scale(1.2) translateX(-2000px)
            
        

.plane-wrapper .rotate-container
    position absolute
    top 51.7003%
    left 13.1%
    width 27.424%
    height 14.4474%
    animation: rotating .2s linear infinite

@keyframes rotating 
    0%
        transform: rotate(0) rotateY(-20deg)  
    50%
        transform: rotate(180deg) rotateY(-20deg)
     100%
         transform: rotate(360deg) rotatey(-20deg)   

           
    